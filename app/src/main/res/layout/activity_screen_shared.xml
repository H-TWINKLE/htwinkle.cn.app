<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/base_recycler_with_toolbar" />

    <ImageView
        android:id="@+id/screen_shared_brow_iv"
        android:layout_width="20dp"
        android:layout_height="35dp"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/baseline_open_in_browser_deep_orange_a700_36dp" />

    <Button
        android:id="@+id/screen_shared_to_home_btn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="100dp"
        android:background="#DBDFF4"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/go_home"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone"
        tools:text="回到桌面"
        tools:visibility="visible" />

    <Button
        android:id="@+id/screen_shared_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/start_share"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:text="开始分享" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>